{% extends "base.njk" %}

{% block content %}


  <div class="header">
    <h1>Munich, Germany</h1>
    <a  class="header_menu">
      <i data-bind="click: openDrawer" class="fa fa-bars"></i>
    </a>
  </div>

  <div class="map_wrapper">
    
    <div data-bind="css: { open: toggleDrawer() == true }" class="list_menu">

          <span>List of Attractions:</span>
          <form>
            <input type="text">
            <button>Search</button>
          </form>
          <ul data-bind="foreach: attractions">
            <li>
              <span data-bind="text: name"> </span>
            </li>
          </ul>

    </div>
      
    <div class="map" id="js_map"></div>
  
  </div>


{% include "partials/footer.njk" %}

{% endblock content %}
